<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.springcloud.dao.PaymentDao">

    <insert id="create">
        insert into springcloud_payment (serial) values (#{serial})
    </insert>

    <resultMap id="getPaymentByIdResultMap" type="Payment">
        <id property="id" column="id"/>
        <result property="serial" column="serial"/>
    </resultMap>

    <select id="getPaymentById" resultMap="getPaymentByIdResultMap">
        select * from springcloud_payment where id = #{id}
    </select>

</mapper>